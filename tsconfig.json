{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true, // recommended by esbuild
    "isolatedModules": true, // recommended by esbuild
    "jsx": "react",
    "jsxFactory": "corgi.createVirtualElement",
    "jsxFragmentFactory": "corgi.Fragment",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "target": "es2022",
  },
  // Workaround https://github.com/microsoft/TypeScript/issues/59036
  "exclude": [],
}
